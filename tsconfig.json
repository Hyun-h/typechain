{
  "include": ["src"],
  "compilerOptions": {
    //outDir로 밑에 처럼 설정 -> package.json에서 script 안에 "build": "tsc" -> build 폴더 안에 index.js 가 짜잔!
    "outDir": "build",
    //자바스크립트 버전 설정
    "target": "ES6",
    //"lib" : 자바스크립트 어떤 버전이 어떤 환경 에서 동작할 지 알려줌
    //es6를 지원하는 서버와 DOM(브라우저) 환경에서 코드 실행
    //"DOM"이 없으면 타입스크립트가 서버 프로젝트 돌리는 걸로 인식
    "lib": ["ES6", "DOM"],
    //규칙을 엄격하게 적용
    "strict": true
  }
}
